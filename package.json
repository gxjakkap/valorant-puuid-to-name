{
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.15"
  },
  "scripts": {
    "compile": "npx tailwindcss -i input.css -o ./public/css/styles.css",
    "compile-watch": "npx tailwindcss -i input.css -o ./public/css/styles.css --watch",
    "testserver": "node express.js",
    "test": "npm-run-all --parallel compile-watch testserver"
  },
  "dependencies": {
    "express": "^4.17.2",
    "npm-run-all": "^4.1.5"
  }
}
